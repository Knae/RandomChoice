<Window x:Name="wndMainMenu" x:Class="Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomChoice"
        mc:Ignorable="d"
        Title="Menu" Height="528" Width="387">
    <Grid Margin="10,27,10,43">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="133*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCreateCategory" Content="Create New&#xD;&#xA;Category" HorizontalAlignment="Center" Margin="0,0,0,10" Width="135" Height="45" VerticalAlignment="Bottom"/>
        <Button x:Name="btnEditCategory" Content="Edit &#xD;&#xA;Category" HorizontalAlignment="Center" Margin="0,0,0,10" Width="124" Grid.Column="1" Height="45" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="txtblkCategoryInfo" Grid.Column="1" Margin="11,52,10,75" TextWrapping="Wrap" ScrollViewer.CanContentScroll="True" Padding="0,0,4,0"/>
        <ListBox x:Name="lstbxCategoryList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,75"/>
        <TextBox x:Name="lblCategoryName" Grid.Column="1" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" FontSize="20" FontWeight="Bold" IsEnabled="False"/>

    </Grid>
</Window>
